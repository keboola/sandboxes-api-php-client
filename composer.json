{
    "name": "keboola/sandboxes-api-php-client",
    "type": "library",
    "description": "PHP Client for Keboola Sandboxes API",
    "keywords": ["keboola", "sandboxes"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub MatÄ›jka",
            "email": "jakub@keboola.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "~6.0",
        "psr/log": "~1.0.0",
        "symfony/validator": "^5.0"
    },
    "require-dev": {
        "keboola/coding-standard": "^8.0",
        "keboola/storage-api-client": "^10.6.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpstan/phpstan": "^0.12.25",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": { "Keboola\\Sandboxes\\Api\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Keboola\\Sandboxes\\Api\\Tests\\": "tests/" }
    },
    "scripts": {
        "test": "phpunit --bootstrap tests/bootstrap.php --fail-on-warning --stop-on-failure tests",
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "cs": [
            "@phplint",
            "@phpcs",
            "@phpstan"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
